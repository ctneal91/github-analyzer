{
  "name": "github-analyzer",
  "version": "1.0.0",
  "description": "GitHub events ingestion and analysis service",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "lint:ruby": "bundle exec rubocop",
    "lint:ruby:fix": "bundle exec rubocop --autocorrect",
    "lint:frontend": "cd frontend && npm run lint",
    "test": "bundle exec rspec",
    "test:frontend": "cd frontend && npm run test:coverage",
    "test:all": "bundle exec rspec && cd frontend && npm run test:coverage"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "*.rb": [
      "bundle exec rubocop --autocorrect --force-exclusion"
    ],
    "frontend/**/*.{ts,tsx}": [
      "cd frontend && npm run lint"
    ]
  }
}
